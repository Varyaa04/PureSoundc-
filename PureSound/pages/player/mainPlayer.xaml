<Page x:Class="PureSound.pages.player.mainPlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PureSound.pages.player"
      mc:Ignorable="d" 
      d:DesignHeight="485" d:DesignWidth="850"
      Title="mainPlayer">

    <Grid Background="#FFA1F2FF">
        <StackPanel Orientation="Horizontal">
            <Border BorderBrush="#FFA5D6F6" BorderThickness="1" Margin="0,0,0,0" Background="#FFB3EFF9">
                <StackPanel>
                    <StackPanel Height="100" Orientation="Horizontal" Margin="0,40,0,0" >
                        <Image Height="84" Width="81" Margin="25,0,0,0" Source="/pages/player/profile.png"/>
                        <TextBlock x:Name="usernameTb" TextWrapping="Wrap" Width="183" Height="40" FontFamily="Bodoni MT Black" FontSize="36">
                  <Run Text=""/>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Height="146">
                        <Button x:Name="btnFav" Content="Favourite" Margin="15,0,0,0" Width="159" Height="55"/>
                        <Button x:Name="btnPlaylists" Content="Playlists" Margin="15,30,0,0" Width="159" Height="55"/>
                    </StackPanel>
                    <StackPanel Height="100">
                        <Button x:Name="btnExit" Content="Exit" Margin="105,50,0,0" Width="87" Height="43"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <StackPanel Orientation="Horizontal">
                    <TextBox Name="SearchBox" Height="30" Margin="55,0,10,0" VerticalAlignment="Top" Width="330"/>
                    <Button x:Name="SearchButton" Content="Поиск" Height="25" VerticalAlignment="Top" Click="SearchButton_Click" Width="123"/>
                </StackPanel>
                <StackPanel Height="430">
                    <ListView x:Name="TracksList" Height="370" Width="506">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5">
                                    <TextBlock Text="{Binding Id}" FontWeight="Bold" Visibility="Hidden"/>
                                    <Image Source="{Binding CoverUrl}" Width="50" Height="50" Margin="5"/>
                                    <StackPanel>
                                        <TextBlock Text="{Binding Title}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Artist}" FontStyle="Italic"/>
                                        <TextBlock Text="{Binding Duration}" Foreground="Gray"/>
                                    </StackPanel>
                                    <Button x:Name="btnFav" Content="+" FontWeight="Bold" Margin="100,0,0,0" Height="20" Width="20" Click="btnFav_Click"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    <TextBlock x:Name="counterTB" Margin="200,5,0,0" TextWrapping="Wrap" Height="31" Width="295" />
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
