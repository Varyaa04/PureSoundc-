<Page x:Class="PureSound.pages.player.mainPlayer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PureSound.pages.player"
      mc:Ignorable="d" 
      d:DesignHeight="485" d:DesignWidth="850"
      Title="mainPlayer">

	<Grid Background="#FFA1F2FF">
		<Border BorderBrush="#FFA5D6F6" BorderThickness="1" Margin="0,0,560,0" Background="#FFB3EFF9">
			<StackPanel>
				<StackPanel Height="100" Orientation="Horizontal" Margin="0,40,0,0" >
					<Image Height="100" Width="100" Margin="25,0,0,0" Source="/pages/player/profile.png"/>
					<TextBlock TextWrapping="Wrap" Width="159" Height="41">
						<Run Text="{Binding userName}"/>
					</TextBlock>
				</StackPanel>
				<StackPanel Height="100"/>
				<StackPanel Height="100"/>
			</StackPanel>
		</Border>
	</Grid>
</Page>
