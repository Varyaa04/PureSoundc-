<Page x:Class="PureSound.pages.auth.registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PureSound.pages.auth"
      mc:Ignorable="d" 
      Title="registration"    
      d:DesignHeight="485" d:DesignWidth="850">

    <Grid Background="#FFA1F2FF">
        <Border BorderBrush="#FFA5D6F6" BorderThickness="1" Margin="0,0,560,0" Background="#FFB3EFF9">
            <Label Content="REGIS" FontSize="72" Margin="29,63,34,229" FontFamily="Bahnschrift Light Condensed" d:LayoutOverrides="VerticalAlignment"/>
        </Border>

        <Label Content="TRA" FontSize="72" Margin="70,149,540,223" FontFamily="Bahnschrift Light Condensed"/>
        <Label Content="TION" FontSize="72" Margin="130,235,535,138" FontFamily="Bahnschrift Light Condensed"/>
        <StackPanel Margin="315,10,10,10">
            <Button x:Name="btnback" Content="Back" FontFamily="Bahnschrift Light Condensed" FontSize="24" Background="#FFC1EBFC" BorderBrush="#FF88DFF7" Click="btnback_Click" Width="100" Margin="0,0,400,0" />
            <StackPanel Height="347">
                <StackPanel Height="124" Orientation="Horizontal" Margin="9,0,0,0">
                    <StackPanel Height="100" Width="260">
                        <Label Content="your name:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220"/>
                        <TextBox x:Name="tbname" TextWrapping="Wrap" Width="140" FontFamily="Bahnschrift Light Condensed" FontSize="24" KeyDown="tbname_KeyDown"/>
                    </StackPanel>
                    <StackPanel Height="100" Width="265">
                        <Label Content="your email:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220"/>
                        <TextBox x:Name="tbemail" TextWrapping="Wrap"  Width="140" FontFamily="Bahnschrift Light Condensed" FontSize="24"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Height="230" Orientation="Horizontal" Margin="10,0,0,0">
                    <StackPanel Height="100" Width="260">
                        <Label Content="your login:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220"/>
                        <TextBox x:Name="tblogin" TextWrapping="Wrap" Width="140" FontFamily="Bahnschrift Light Condensed" FontSize="24"/>
                    </StackPanel>
                    <StackPanel Height="195" Width="265">
                        <StackPanel Height="92">
                            <Label Content="your password:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220"/>
                            <TextBox x:Name="tbpass" TextWrapping="Wrap" Width="140" FontFamily="Bahnschrift Light Condensed" FontSize="24" TextChanged="tbpass_TextChanged"/>
                        </StackPanel>
                        <StackPanel Height="83">
                            <Label Content="repeat your password:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220"/>
                            <PasswordBox x:Name="tbrepass" Width="140" FontFamily="Bahnschrift Light Condensed" FontSize="24" PasswordChanged="tbrepass_PasswordChanged"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Button x:Name="btnreg" Content="Create account" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220" Background="#FFC1EBFC" BorderBrush="#FF88DFF7" Click="btnreg_Click" Height="44"/>
        </StackPanel>
    </Grid>
</Page>
