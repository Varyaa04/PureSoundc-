<Page x:Class="PureSound.pages.auth.authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PureSound.pages.auth"
      mc:Ignorable="d" 
      d:DesignHeight="485" d:DesignWidth="850"
      Title="authorization">

    <Grid Background="#FFA1F2FF">
        <Border BorderBrush="#FFA5D6F6" BorderThickness="1" Margin="0,0,560,0" Background="#FFB3EFF9">
            <Label Content="AUTHOR" FontSize="72" Margin="29,63,34,310" FontFamily="Bahnschrift Light Condensed"/>
        </Border>

        <Label Content="ORIZA" FontSize="72" Margin="70,149,540,223" FontFamily="Bahnschrift Light Condensed"/>
        <Label Content="TION" FontSize="72" Margin="130,235,535,138" FontFamily="Bahnschrift Light Condensed"/>
        <StackPanel Margin="315,46,10,50">
            <StackPanel Height="268">
                <StackPanel Height="148">
                    <Label Content="login:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="280" Margin="0,35,0,15"/>
                    <TextBox x:Name="logtxt" TextWrapping="Wrap" Width="163" FontFamily="Bahnschrift Light Condensed" FontSize="24" Height="29"/>
                </StackPanel>
                <StackPanel Height="120">
                    <Label Content="password:" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="280" Margin="0,20,0,0"/>
                    <PasswordBox x:Name="passtxt" Width="163" FontFamily="Bahnschrift Light Condensed" FontSize="24" Height="29"/>
                </StackPanel>
            </StackPanel>
            <Button x:Name="btnauth" Content="Go" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="165" Background="#FFC1EBFC" BorderBrush="#FF88DFF7" Click="btnauth_Click"/>
            <Button x:Name="btnreg" Content="Create account" FontFamily="Bahnschrift Light Condensed" FontSize="24" Width="220" BorderBrush="{x:Null}" Background="{x:Null}" Click="btnreg_Click"/>
        </StackPanel>
    </Grid>
</Page>
